package mk.com.iwec.e_library;

import java.sql.Connection;
import java.sql.Date;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Objects;

import mk.com.iwec.e_library.interfaces.IBook;

public class Book {
	private static final String url = "jdbc:postgresql://localhost:5432/postgres";
	private static final String user = "postgres";
	private static final String password = "0110";

	public static Connection getConnection() throws SQLException {
		return DriverManager.getConnection(url, user, password);
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getTitle() {
		return title;
	}

	public void setTitle(String title) {
		this.title = title;
	}

	public int getIssueNumber() {
		return issueNumber;
	}

	public void setIssueNumber(int issueNumber) {
		this.issueNumber = issueNumber;
	}

	public Date getYearOfRelease() {
		return yearOfRelease;
	}

	public void setYearOfRelease(Date yearOfRelease) {
		this.yearOfRelease = yearOfRelease;
	}

	public String getISBN() {
		return ISBN;
	}

	public void setISBN(String iSBN) {
		ISBN = iSBN;
	}

	public Author getAuthor() {
		return author;
	}

	public void setAuthor(Author author) {
		this.author = author;
	}

	public int getAuthor_id() {
		return author_id;
	}

	public void setAuthor_id(int author_id) {
		this.author_id = author_id;
	}

	public Publisher getPublisher() {
		return publisher;
	}

	public void setPublisher(Publisher publisher) {
		this.publisher = publisher;
	}

	public int getPublisher_id() {
		return publisher_id;
	}

	public void setPublisher_id(int publisher_id) {
		this.publisher_id = publisher_id;
	}

	public String getCover() {
		return cover;
	}

	public void setCover(String cover) {
		this.cover = cover;
	}

	public String getGenre() {
		return genre;
	}

	public void setGenre(String genre) {
		this.genre = genre;
	}



	public Book(int id, String title, int issueNumber, Date yearOfRelease, String iSBN, Author author,
			Publisher publisher, String cover, String genre) {
		super();
		this.id = id;
		this.title = title;
		this.issueNumber = issueNumber;
		this.yearOfRelease = yearOfRelease;
		ISBN = iSBN;
		this.author = author;
		this.publisher = publisher;
		this.cover = cover;
		this.genre = genre;
	}



	public Book() {
		super();
	}

	public Book(int id1, String title, int issueNumber, int yearOfRelease, String iSBN, String author,
			String publisher, String cover,String genre ) {
		// TODO Auto-generated constructor stub
	}



	private int id;
	private String title;
	private int issueNumber;
	private Date yearOfRelease;
	private String ISBN;
	private Author author;
	private int author_id;
	private Publisher publisher;
	protected int publisher_id;
	private String cover;
	private String genre;

	@Override
	public int hashCode() {
		return Objects.hash(ISBN, author, author_id, cover, genre, id, issueNumber, publisher, publisher_id, title,
				yearOfRelease);
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Book other = (Book) obj;
		return Objects.equals(ISBN, other.ISBN) && Objects.equals(author, other.author) && author_id == other.author_id
				&& Objects.equals(cover, other.cover) && Objects.equals(genre, other.genre) && id == other.id
				&& issueNumber == other.issueNumber && Objects.equals(publisher, other.publisher)
				&& publisher_id == other.publisher_id && Objects.equals(title, other.title)
				&& Objects.equals(yearOfRelease, other.yearOfRelease);
	}

	@Override
	public String toString() {
		return "Book [id=" + id + ", title=" + title + ", issueNumber=" + issueNumber + ", yearOfRelease="
				+ yearOfRelease + ", ISBN=" + ISBN + ", author=" + author + ", author_id=" + author_id + ", publisher="
				+ publisher + ", publisher_id=" + publisher_id + ", cover=" + cover + ", genre=" + genre + "]";
	}


	
}
